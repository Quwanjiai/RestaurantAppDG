<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragonpp"
    tools:context=".OrderActivity">

    <TextView
        android:id="@+id/ttextView3"
        android:layout_width="163dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="517dp"
        android:text="@string/tiger_rolls"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/plusbutton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.592" />

    <Button
        android:id="@+id/button2"
        android:layout_width="128dp"
        android:layout_height="46dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button"
        android:text="Order!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pricetext" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="423dp"
        android:layout_height="52dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/thecool"
        android:text="Current Order"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pricetext"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_marginStart="202dp"
        android:layout_marginBottom="24dp"
        android:text="0.00$"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/image2"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/dragonboy" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="469dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rainbowss"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rainbow" />

    <Button
        android:id="@+id/plusbutton"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="516dp"
        android:text="@string/plusBT"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/Negbutton"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="516dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toEndOf="@+id/numbVi"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/plusbutton2"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="428dp"
        android:text="@string/plusBT"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rainbowss"
        app:layout_constraintTop_toBottomOf="@+id/plusbutton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Negbutton2"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="428dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numbVi2"
        app:layout_constraintTop_toBottomOf="@+id/Negbutton" />

    <TextView
        android:id="@+id/numbVi"
        android:layout_width="25dp"
        android:layout_height="29dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-36dp"
        android:layout_marginEnd="3dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Negbutton"
        app:layout_constraintStart_toEndOf="@+id/plusbutton"
        app:layout_constraintTop_toBottomOf="@+id/Negbutton" />

    <TextView
        android:id="@+id/numbVi2"
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="436dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/Negbutton"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toEndOf="@+id/plusbutton2"
        app:layout_constraintTop_toBottomOf="@+id/plusbutton2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/sideBTN"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="424dp"
        android:background="@drawable/custom_button"
        android:text="@string/sidesBTN"
        android:textAlignment="center"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/optionslayout" />

    <LinearLayout
        android:id="@+id/optionslayout"
        android:layout_width="235dp"
        android:layout_height="87dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="276dp"
        android:background="#55FFFFFF"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <TextView
            android:layout_width="103dp"
            android:layout_height="30dp"
            android:text="@string/sides1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="103dp"
            android:layout_height="30dp"
            android:text="@string/sides2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="103dp"
            android:layout_height="31dp"
            android:text="@string/sides3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>

        <LinearLayout
            android:id="@+id/pinearlayout"
            android:layout_width="85dp"
            android:layout_height="83dp"
            android:layout_marginStart="-87dp"
            android:layout_marginBottom="280dp"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/optionslayout"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/checkisc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="is cooked"
                android:textSize="10dp" />

            <Button
                android:id="@+id/totalBTN"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/custom_button"
                android:text="Add order up"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/qinearLayout"
            android:layout_width="51dp"
            android:layout_height="87dp"
            android:layout_marginStart="-140dp"
            android:layout_marginBottom="276dp"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/optionslayout"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/riceCB"
                android:layout_width="29dp"
                android:layout_height="31dp"
                />

            <CheckBox
                android:id="@+id/waCB"
                android:layout_width="28dp"
                android:layout_height="31dp"
                 />

            <CheckBox
                android:id="@+id/ykCb"
                android:layout_width="28dp"
                android:layout_height="31dp"
                 />


        </LinearLayout>

    <TextView
        android:id="@+id/rainbowss"
        android:layout_width="163dp"
        android:layout_height="27dp"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="474dp"
        android:text="@string/rainbow_rolls"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/pricetext"
        app:layout_constraintEnd_toStartOf="@+id/plusbutton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>