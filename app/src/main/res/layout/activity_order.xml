<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragonpp"
    tools:context=".OrderActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="163dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="517dp"
        android:text="@string/tiger_rolls"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/button2"
        android:layout_width="128dp"
        android:layout_height="46dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button"
        android:text="Order!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pricetext" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="423dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/thecool"
        android:text="Current Order"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pricetext"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_marginStart="202dp"
        android:layout_marginBottom="24dp"
        android:text="0.00$"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/dragonboy" />

    <TextView
        android:id="@+id/rainbowss"
        android:layout_width="163dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="430dp"
        android:text="@string/rainbow_rolls"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/image2"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="469dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rainbow" />


    <Button
        android:id="@+id/plusbutton"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="516dp"
        android:text="@string/plusBT"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Negbutton"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="516dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/plusbutton2"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="428dp"
        android:text="@string/plusBT"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Negbutton2"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="428dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/numbVi"
        android:layout_width="23dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="529dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/Negbutton" />

    <TextView
        android:id="@+id/numbVi2"
        android:layout_width="23dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="440dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/Negbutton" />

    <Button
        android:id="@+id/sideBTN"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="432dp"
        android:background="@drawable/custom_button"
        android:text="@string/sidesBTN"
        android:textAlignment="center"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/optionslayout"
        android:layout_width="235dp"
        android:layout_height="87dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="333dp"
        android:background="#55FFFFFF"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/sideBTN"
        tools:visibility="visible">

        <TextView
            android:layout_width="103dp"
            android:layout_height="30dp"
            android:text="@string/sides1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="103dp"
            android:layout_height="30dp"
            android:text="@string/sides2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="103dp"
            android:layout_height="31dp"
            android:text="@string/sides3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="51dp"
        android:layout_height="87dp"
        android:layout_marginStart="-140dp"
        android:layout_marginBottom="334dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/optionslayout"
        tools:visibility="visible">

        <Button
            android:id="@+id/sideplus1"
            android:layout_width="29dp"
            android:layout_height="31dp"
            android:text="@string/plusBT"
            android:textAlignment="center"
            android:textSize="10dp" />

        <Button
            android:id="@+id/sideplus2"
            android:layout_width="28dp"
            android:layout_height="31dp"
            android:text="@string/plusBT"
            android:textAlignment="center"
            android:textSize="10dp" />

        <Button
            android:id="@+id/sideplus3"
            android:layout_width="28dp"
            android:layout_height="31dp"
            android:text="@string/plusBT"
            android:textAlignment="center"
            android:textSize="10dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="86dp"
        android:layout_marginStart="-87dp"
        android:layout_marginBottom="333dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/optionslayout"
        tools:visibility="visible">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>